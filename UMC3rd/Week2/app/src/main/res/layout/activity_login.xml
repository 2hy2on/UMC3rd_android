<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5f0080"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <ImageButton
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="18dp"
        android:background="#00ffffff"
        android:src="@drawable/cart_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="#00ffffff"
        android:src="@drawable/place_icon"
        app:layout_constraintEnd_toStartOf="@+id/cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="마이컬리"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/membership"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="회원 가입하고\n다양한 혜택을 받아보세요!"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <Button
        android:id="@+id/membership_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:backgroundTint="#FAFAFA"
        android:text="가입 혜택 보기 >"
        android:textColor="#AEAEAE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/membership" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="380dp"
        android:layout_height="60dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="#5D007D"
        android:text="로그인/회원가입"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/membership_btn" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/login_btn">

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="35sp"
            android:background="#F4F4F4" />

        <Button
            android:id="@+id/notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="알림 설정"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:background="#F4F4F4" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="컬리 소개"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="배송 안내"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="공지사항"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="자주하는 질문"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="고객센터"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="이용안내"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_stroke"
            android:gravity="center_vertical"
            android:paddingLeft="20sp"
            android:text="앱 버전"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </android.support.v7.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginRight="14dp"
        android:background="#D7D7D7"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="37dp"
        android:background="#D7D7D7"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:id="@+id/arrow3"
        android:background="#D7D7D7"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:background="#D7D7D7"
        android:id="@+id/arrow4"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:background="#D7D7D7"
        android:id="@+id/arrow5"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:background="#D7D7D7"
        android:id="@+id/arrow6"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow5"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:background="#D7D7D7"
        android:id="@+id/arrow7"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <ImageView
        android:background="#D7D7D7"
        android:id="@+id/arrow8"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/arrow7"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="27dp"
        android:layout_marginRight="14dp"
        android:src="@drawable/ic_baseline_arrow" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/menu_selector_color"
        tools:ignore="MissingConstraints"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
